<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitis.Animation_main">

    <View
        android:id="@+id/v1"
        android:layout_width="20dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="#000000" />

    <View
        android:id="@+id/v2"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/v1"
        android:layout_marginEnd="30dp"
        android:background="#000000" />

    <View
        android:id="@+id/v3"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/v2"
        android:layout_marginEnd="30dp"
        android:background="#000000" />

    <View
        android:id="@+id/v4"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/v3"
        android:layout_marginEnd="30dp"
        android:background="#000000" />

    <View
        android:id="@+id/v1a"
        android:layout_width="20dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:background="#000000" />

    <View
        android:id="@+id/v2a"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/v1a"
        android:background="#000000" />

    <View
        android:id="@+id/v3a"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/v2a"
        android:background="#000000" />

    <View
        android:id="@+id/v4a"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/v3a"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/v_img"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_animation_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/culinary_word"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>