<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="13dp">

    <ImageView
        android:id="@+id/img_user_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ng_user_comment_img"
        android:padding="7dp"
        android:src="@drawable/user_18" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_user_comment"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_comment_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nguyễn Thành Công"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:paddingTop="2dp">

            <ImageView
                android:id="@+id/user_comment_star1"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/user_comment_star2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/user_comment_star3"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/user_comment_star4"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/user_comment_star5"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_star_filled" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/date_comment_review_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="10dp"
        android:text="2023-06-22"
        android:textColor="#b5b5ba"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment_user_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_user_comment"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Sản phẩm tốt"
        android:textColor="#767678"
        android:textSize="13sp"
        android:textStyle="bold" />

    <View
        android:layout_width="140dp"
        android:layout_height="0.8dp"
        android:layout_below="@+id/comment_user_tv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:background="#b8b9bd" />
</RelativeLayout>