<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/disabled_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="500dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boder_fragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/boder_fragment"
            android:backgroundTint="#C9000000">

            <View
                android:id="@+id/view_1001"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_home_menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/user_24"
                app:layout_constraintBottom_toBottomOf="@+id/view_1001"
                app:layout_constraintEnd_toEndOf="@+id/view_1001"
                app:layout_constraintStart_toStartOf="@+id/view_1001"
                app:layout_constraintTop_toTopOf="@+id/view_1001" />

            <View
                android:id="@+id/view_1000"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_home_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_close_fragment_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross_small_20"
                app:layout_constraintBottom_toBottomOf="@+id/view_1000"
                app:layout_constraintEnd_toEndOf="@+id/view_1000"
                app:layout_constraintStart_toStartOf="@+id/view_1000"
                app:layout_constraintTop_toTopOf="@+id/view_1000" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/view_1001"
                app:layout_constraintStart_toEndOf="@+id/view_1001"
                app:layout_constraintTop_toTopOf="@+id/view_1001">

                <TextView
                    android:id="@+id/fragment_home_menu_user_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="NGUYỄN THÀNH CÔNG"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment_home_menu_email_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="nguyenthanhcong@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout100"
            android:layout_below="@+id/ConstraintLayout1"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF" />

        <LinearLayout
            android:id="@+id/linearLayout100"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/boder_fragment"
            android:backgroundTint="#FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_logout_tran"
                android:paddingStart="10dp"
                android:text="Thoát ứng dụng"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
